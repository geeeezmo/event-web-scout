{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "plugins": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {"type": "string"},
          "priority": {"type": "integer"},
          "enabled": {"type": "boolean"}
        },
        "required": ["name", "priority", "enabled"]
      }
    }
  }
}
